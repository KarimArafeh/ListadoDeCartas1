<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_detail">


    <ImageView
        android:id="@+id/CartaImage"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:maxHeight="160dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/CartaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="The Dark Knight"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/CartaImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CartaColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/CartaName"
        app:layout_constraintTop_toBottomOf="@+id/CartaName" />

    <TextView
        android:id="@+id/CartaRarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Audience Score: 93%"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/CartaColor"
        app:layout_constraintTop_toBottomOf="@+id/CartaColor" />

    <TextView
        android:id="@+id/CartaText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="This is an excellent movie that has action and romance"
        app:layout_constraintLeft_toLeftOf="@+id/CartaRarity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CartaImage" />

    <TextView
        android:id="@+id/CartaSet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="This is a story about a protagonist defeating an antagonist"
        app:layout_constraintLeft_toLeftOf="@+id/CartaText"
        app:layout_constraintRight_toRightOf="@+id/CartaText"
        app:layout_constraintTop_toBottomOf="@+id/CartaText" />



</android.support.constraint.ConstraintLayout>
