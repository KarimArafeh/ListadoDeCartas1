<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity_detail">


        <ImageView
            android:id="@+id/CartaImage"
            android:layout_width="129dp"
            android:layout_height="183dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="72dp"
            android:adjustViewBounds="true"
            android:maxHeight="160dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/CartaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Card Name"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/CartaImage"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.59"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.01" />

        <TextView
            android:id="@+id/CartaRarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Rarity"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/CartaImage"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.18"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/CartaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/CartaImage"
            android:text="Card information"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="96dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="96dp" />

        <TextView
            android:id="@+id/CartaSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Set"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/CartaImage"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/CartaRarity"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.21" />

        <TextView
            android:text="Card Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CartaColor"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/CartaImage"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintBottom_toTopOf="@+id/CartaRarity"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.43" />


    </android.support.constraint.ConstraintLayout>

</layout>